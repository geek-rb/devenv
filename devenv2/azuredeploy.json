    "subnetName": "[format('devSubnet-{0}', replace(split(parameters('subnetPrefix'), '.')[3], '/', '-'))]",
    "vmName": "[format('vm-{0}', variables('subnetName'))]"
  },
  "resources": [
    {
      "type": "Microsoft.Network/networkInterfaces",
      "apiVersion": "2023-05-01",
